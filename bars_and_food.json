---
# Remember to set production_url in your _config.yml file!
title : JSON
---
{
"bars": [{% for bar in site.categories.bars %}
  {
    "name": {{ bar.name | jsonify }},
    "lat": {{ bar.lat }},
    "lon": {{ bar.lon }}{% if bar.link %},"link": {{ bar.link | jsonify }}{% endif %}
    {% if bar.special %},"special": {{ bar.special | jsonify }}{% endif %}
    {% if bar.content %},"comment": {{ bar.content | markdownify | remove: '<p>' | remove: '</p>' | strip | jsonify }}{% endif %}
  }{% if forloop.last %}{% else %},{% endif %}{% endfor %}
],
"food": [{% for food in site.categories.food %}
  {
    "name": {{ food.name | jsonify }},
    "lat": {{ food.lat }},
    "lon": {{ food.lon }}{% if food.link %},"link": {{ food.link | jsonify }}{% endif %}
    {% if food.special %},"special": {{ food.special | jsonify }}{% endif %}
    {% if food.content %},"comment": {{ food.content | markdownify | remove: '<p>' | remove: '</p>' | strip | jsonify }}{% endif %}
  }{% if forloop.last %}{% else %},{% endif %}{% endfor %}
]
}
